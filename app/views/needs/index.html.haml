=row :page_message do
  %h2 Current Needs

=row :instructions do
  %h4 Donate to one of the needs below

= search_bar 'What would you like to donate?'

- @needs.each do |need|
  =row :card do
    %h3= Organization.find(need.organization_id).name
    %p= need.title
    %p= need.description
    =link_to new_need_donation_path(need.id), class:"btn" do
      Donate

.paginate.text-center
  = will_paginate @needs, renderer: FoundationPagination::Rails
