= merch_search_bar "What are you shopping for?"
/ =render partial: "layouts/partials/merch_search_bar"

- @merchandises.each do |item|
  =row :card do
    %h3== #{item.title} #{number_to_currency(item.price)}
    %p== #{item.description}
    =row :images do
      =link_to item.pic1.url(:full) do
        =image_tag item.pic1.url(:medium)
      =link_to item.pic2.url(:full) do
        =image_tag item.pic2.url(:medium)
      =link_to item.pic3.url(:full) do
        =image_tag item.pic3.url(:medium)
    =row :buttons do
      = sold(item)


.paginate.text-center
  = will_paginate @merchandises, renderer: FoundationPagination::Rails
