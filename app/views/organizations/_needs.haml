.row
  .columns.large-12
    %h3 Needs
    %table
      %thead
        %tr
          %th need
          %th description
      %tbody
        - @needs.each do |need|
          %tr
            %td= link_to need.title, need_path(donation.need)
            %td= link_to need.description, need_path(donation.need)
